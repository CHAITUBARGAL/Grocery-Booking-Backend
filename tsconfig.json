{
  "compilerOptions": {
    "target": "ES6",          // The ECMAScript version
    "module": "commonjs",     // CommonJS modules for Node.js
    "outDir": "./dist",       // Output compiled JS files here
    "rootDir": "./src",       // The root directory of TypeScript files
    "strict": true,           // Enable strict type checking
    "esModuleInterop": true   // Allow default import syntax for commonjs modules
  },
  "include": [
    "src/**/*"                 // Include all files under 'src' folder
  ],
  "exclude": [
    "node_modules"             // Exclude 'node_modules' from compilation
  ]
}
