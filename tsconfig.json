{
  "compilerOptions": {
    "target": "ES6",                   // Set the ECMAScript target version
    "module": "commonjs",              // CommonJS module system
    "outDir": "./dist",                // Compiled JavaScript files will be placed here
    "rootDir": "./src",                // Source files are under the 'src' directory
    "strict": true,                    // Enable strict type-checking options
    "esModuleInterop": true,           // Allow default imports from modules with no default export
    "skipLibCheck": true               // Skip checking of declaration files to speed up compilation
  },
  "include": [
    "src/**/*"                         // Include all TypeScript files under the 'src' folder
  ],
  "exclude": [
    "node_modules"                     // Exclude the 'node_modules' folder from compilation
  ]
}
